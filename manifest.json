{
  "manifest_version": 3,
  "name": "SecureX - Real Time Chat Protector",
  "version": "1.0",
  "description": "AI-based threat detection and reporting in chats",

  "permissions": ["activeTab", "scripting"],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  }
}
