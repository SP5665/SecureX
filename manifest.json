{
  "manifest_version": 3,
  "name": "SecureX",
  "version": "1.0",
  "description": "Detects threatening messages in Instagram Web DMs, blurs them and helps create a PDF report.",
  "permissions": ["storage", "scripting", "activeTab", "alarms", "tabs"],
  "host_permissions": [
    "https://www.instagram.com/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.jpg",
      "48": "icons/icon.jpg",
      "128": "icons/icon.jpg"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": [
        "libs/jspdf.umd.min.js",
        "libs/html2canvas.min.js",
        "utils/pdf_generator.js",
        "utils/screenshot_helper.js",
        "content.js"
      ],
      "css": ["styles/blur.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon.jpg",
    "48": "icons/icon.jpg",
    "128": "icons/icon.jpg"
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/html2canvas.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
