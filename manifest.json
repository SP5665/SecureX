{
  "manifest_version": 3,
  "name": "SecureX - Real Time Chat Protector",
  "version": "1.0",
  "description": "Detects threatening messages, blurs them, and generates cybercrime-ready reports.",
  
  "permissions": ["activeTab", "scripting"],
  
  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["libs/jspdf.umd.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
